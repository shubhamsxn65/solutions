#include<stdio.h>
int mat[2010][2010],v[2010];
int revenue(int i,int j,int age)
{
	int s1,s2;
	if(mat[i][j])
		return mat[i][j];
	if(i==j)
	{	
		mat[i][j]=v[i]*age;
		return mat[i][j];
	}
	else
	{	
		s1=v[i]*age+revenue(i+1,j,age+1);
		s2=v[j]*age+revenue(i,j-1,age+1);
		if(s1>s2)
			mat[i][j]=s1;
		else
			mat[i][j]=s2;
		return mat[i][j];
	}
}
int main()
{
	int n,i,j;
	scanf("%d",&n);
	for(i=0;i<n;i++)
		scanf("%d",v+i);
	printf("%d\n",revenue(0,n-1,1));
	return 0;
}