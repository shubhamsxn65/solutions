#include<stdio.h>

int main()

{
	
	while(1)
	{
	
	int a,b,i,j;
	
	scanf("%d %d",&a,&b);
	
	if(a==-1 && b==-1)
		break;
	
	if(a==0&&b==0)
	{	
		printf("0\n");
		continue;
	}
	
	if(a==b)
	{
		printf("1\n");
		continue;
	}	
	if(a>b)
	
	{	
		i=a/(b+1);

		if(a%(b+1)!=0)
			i++;
	
	}
	
	else
	
	{
		
		i=b/(a+1);
		
		if(b%(a+1)!=0)
		i++;
	
	}
	
	printf("%d\n",i);
	}
	return 0;

}



