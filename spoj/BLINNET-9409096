#include<cstdio>
#include<vector>
#include<algorithm>

#define edge pair<int,int> 

using namespace std;
class Graph
{
	int v_no,e,*rank,*parent,total,count;
	vector< pair < int , edge > > G;
	public:
		Graph(){}
		void set(int v,int e)
		{
			this->v_no=v;
			this->e=e;
			rank = new int [v];
			parent = new int [v];
			for(int i=0;i<v;i++)
			{
				parent[i]=i;
				rank[i]=1;
			}
			total=0;
			count=0;
		}
		int findset(int x)
		{
		 	if(x!=parent[x])
		 		parent[x]=findset(parent[x]);
		 	return parent[x];
		}
		void addEdge(int u,int v,int w)
		{
			G.push_back(pair< int, edge >(w, edge(u, v)));
		}
		void kruskal(void)
		{
			sort(G.begin(),G.end());
			for(int i=0;i<e;i++)
			{
				int u=G[i].second.first;
				int v=G[i].second.second;
				int pu=findset(u);
				int pv=findset(v);
				if(pu!=pv)
				{
					merge(pu,pv);
					count++;
					total+=G[i].first;
				}
				if(count==v_no-1)
					break;
			}
		}
		void merge(int x,int y)
		{
			if(rank[x]>rank[y])
				parent[y]=x;
			else
				parent[x]=y;
			if(rank[x]==rank[y])
				rank[y]++;
		}
		int cost(void)
		{
			return total;
		}
};


int main()
{
	int t,n,y,w,x,e;
	char c[20];
	scanf("%d",&t);
	while(t--)
	{
		e=0;
		Graph obj;
		scanf("%d",&n);
		for(int i=1;i<=n;i++)
		{
			scanf("%s",c);
			scanf("%d",&x);
			e+=x;
			while(x--)
			{
				scanf("%d%d",&y,&w);
				obj.addEdge(i-1,y-1,w);
			}
		}
		obj.set(n,e);
		obj.kruskal();
		printf("%d\n",obj.cost());
	}
	return 0;
}